<p id="notice"><%= notice %></p>

 
<div class="container">
 <div class="row">
    <div class="col-md-4">
    	<div class="book-show">
	<%=   image_tag(@book.image , style: "width:100%;height:100%;") %>
</div>
	
	</div>
	<div class="col-md-8">
		<div class="book-info">
			
			<h2 class="book-title"><%= @book.title %></h2>
			<h4 >
			<span>Category: </span>	<%=  link_to @category.name , category_path(@category) %>
			</h4>
			
			<h3 class="book-author"><span>By</span> <%= link_to @book.authername , auther_path(@book.authername) %>
			</h3>
	       
	    	
	        <p class="book-desc"> <%= @book.description %></p>
		</div>
	</div>
 </div>
 

<div class="links btn-group">
	<%= link_to 'Back', books_path %> 
	<% if user_signed_in? %>        
	    <% if @book.user_id == current_user.id %>
	       | <%= link_to 'Edit', edit_book_path(@book) %>
	       | <%= link_to 'Delete' ,book_path(@book) , method: :delete , data: {confirm: "are you sure ?"} %>
	    <% end %>
	<% end %>  

</div>
<br /><br />
</div>