
<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
    
  </div>
  <div class="row">
      <h3>Categories:</h3>
      <div class="category"> 
        <% @categories.each do |category| %>
          <%=  link_to category.name , category_path(category) , :class => "category_icon" %>
          
      <% end %>
      </div>
  </div>
 
  <div class="row ">
    <h3>Books:</h3>
    <div class="books-div">
    <% @books.each do |book| %>
      <div class="book">
        <%= link_to book.title, book %><br />
        <%=  truncate( book.description , length:15)%><br />
        <%= link_to book.authername , auther_path(book.authername) %> (Author)
        
        
      </div>
    <% end %>
  </div>
  </div>
<br>


</div>