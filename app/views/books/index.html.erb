<p id="notice"><%= notice %></p>

<h1>Books</h1>

<div >
    <h3> Categories:

    <% @categories.each do |category| %>
     | <%=  link_to category.name , category_path(category) %>
      
    <% end %>
  </h3>
</div>   


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Authername</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%=  truncate( book.description , length:20)%></td>
        <td><%= book.authername %></td>
        <td><%= link_to 'Show', book %></td>
        
      </tr>
    <% end %>


  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
